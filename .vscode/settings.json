{ 
  "cSpell.ignorePaths": [
    "pubspec.yaml",
    ".vscode/"
  ],
  "cSpell.words": [
    "toggleable",
  ],
  "cSpell.enableFiletypes": [
    "dart"
  ],
  "dart.lineLength": 100,
  "editor.rulers": [100],
  "[dart]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true,
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.suggest.insertMode": "replace"
  }
}